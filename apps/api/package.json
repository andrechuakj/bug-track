{
  "name": "~api",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "description": "API + client for the Bug Analysis Website",
  "exports": {
    ".": "./client/index.ts"
  },
  "scripts": {
    "dev": "run-p dev:backend dev:api",
    "dev:backend": "fastapi dev src/main.py",
    "dev:api": "bun --watch client/main.ts",
    "test": "cross-env MODE=test pytest",
    "coverage": "cross-env MODE=test pytest --cov=src",
    "lint": "run-p lint:backend lint:api",
    "lint:api": "prettier --check client",
    "lint:backend": "black src --check",
    "format": "run-p format:backend format:api",
    "format:api": "prettier --write client",
    "format:backend": "black src"
  },
  "dependencies": {
    "openapi-fetch": "^0.13.4"
  },
  "devDependencies": {
    "@types/bun": "^1.2.2",
    "bun": "^1.2.2",
    "cross-env": "^7.0.3",
    "npm-run-all2": "^7.0.2",
    "openapi-typescript": "^7.6.0",
    "prettier": "*",
    "typescript": "*"
  }
}
